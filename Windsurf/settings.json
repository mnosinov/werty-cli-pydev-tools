{
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": false,
    "editor.lineHeight": 1.4,
    //"editor.fontFamily": "Ubuntu Mono", "editor.fontSize": 15,
    "editor.fontFamily": "Iosevka Term", "editor.fontSize": 15,
    //"editor.fontFamily": "Terminus (TTF)", "editor.fontSize": 16,
    //"editor.fontFamily": "Cousine Nerd Font Mono", "editor.fontSize": 13,
    //"editor.fontFamily": "TerminessTTF Nerd Font", "editor.fontSize": 13,
    "editor.minimap.enabled": false,
    "editor.fontWeight": "normal",  // Вес шрифта: 'normal', 'bold', 'lighter'
    "terminal.integrated.fontFamily": "Unifont",
    "terminal.integrated.fontSize": 13,
    "chat.editor.fontSize": 16,

    "window.zoomLevel": 1.3,

    "workbench.editor.tabSizing": "fit",  // or "fit" for minimal width
    "workbench.editor.showIcons": false,     // Hide file type icons
    "breadcrumbs.enabled": false,

    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.colorCustomizations": {
        "chat.border": "#3a3734",
        "chat.requestBorder": "#3a3734",
        "chat.messageBorder": "#3a3734",
        "window.activeBorder": "#3a3734",        // Граница активного окна
        "window.inactiveBorder": "#3a3734",      // Граница неактивного окна
        "panel.border": "#3a3734",               // Граница панели снизу
        "sideBar.border": "#3a3734",             // Граница боковой панели
        "editorGroup.border": "#3a3734",         // Граница между редакторами
        "editorGroup.dropBorder": "#3a3734",     // Граница при перетаскивании вкладки
        "editorGroup.dropIntoPromptBorder": "#3a3734", // Граница подсказки при перетаскивании
        "tab.activeBorder": "#3a3734",           // Граница активной вкладки
        "tab.activeBorderTop": "#3a3734",        // Верхняя граница активной вкладки
        "tab.border": "#3a3734",                 // Граница всех вкладок
        "tab.unfocusedActiveBorder": "#3a3734",  // Граница активной, но не в фокусе вкладки
        "tab.unfocusedInactiveBorder": "#3a3734", // Граница неактивной и не в фокусе вкладки
        "editor.lineHighlightBorder": "#3a3734", // Граница текущей строки
        "editor.rangeHighlightBorder": "#3a3734", // Граница выделенного диапазона
        "editor.selectionHighlightBorder": "#3a3734", // Граница выделенного текста
        "editor.wordHighlightBorder": "#3a3734", // Граница подчеркнутого слова
        "editor.findMatchBorder": "#3a3734",     // Граница найденного совпадения
        "editor.findMatchHighlightBorder": "#3a3734", // Граница подсвеченного совпадения
        "activityBar.border": "#3a3734",         // Граница панели активности
        "statusBar.border": "#3a3734",           // Граница строки состояния
        "titleBar.border": "#3a3734",            // Граница заголовка окна
        "menu.border": "#3a3734",                // Граница выпадающих меню
        "notifications.border": "#3a3734",       // Граница уведомлений
        "peekView.border": "#3a3734",            // Граница всплывающего окна (peek)
        "panelSection.border": "#3a3734",        // Граница секций панели
        "sash.hoverBorder": "#3a3734",            // Граница при наведении на разделитель
        "[Gruvbox Material Dark]": {
            "tab.activeBackground": "#3a3734",   // фон активной вкладки
            //"tab.activeForeground": "#b5b4b0"    // (опционально) цвет текста активной вкладки
            //"editor.background": "#1D2021"
            //"editor.background": "#1B1B1C"
            //"editor.background": "#2e2e2f"
            "editor.background": "#222222"
            
        }
    },
    "terminal.integrated.gpuAcceleration": "on",
    "workbench.activityBar.location": "top",
    "editor.fontVariations": false
}